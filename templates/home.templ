package templates

templ Home(t func(string) string) {
	@Base(t) {
		<main class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl font-bold tracking-tight text-slate-900 dark:text-black sm:text-6xl" data-i18n="welcome">
					{ t("welcome") }
				</h1>
				<p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-400" data-i18n="description">
					{ t("description") }
				</p>
			</div>
		</main>
	}
}
